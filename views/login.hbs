<div class="flex min-h-svh flex-col items-center justify-center bg-muted p-6 md:p-10">
	<div class="w-full max-w-sm md:max-w-3xl">
		<div class="flex flex-col gap-6">
			<sl-card class="overflow-hidden !p-0 no-padding">
				<div class="grid p-0 md:grid-cols-2">
					<form class="p-6 md:p-8 md:py-10">
						<div class="flex flex-col gap-2">
							<div class="flex flex-col items-center text-center mb-3">
								<h1 class="text-2xl font-bold tracking-tight">Welcome back</h1>
								<p class="text-balance text-muted-foreground">Login to your Resty dashboard</p>
							</div>
							<div class="grid gap-2">
								<label class="text-sm text-muted-foreground" htmlFor="email">Email</label>
								<sl-input
									id="email"
									type="email"
									autocomplete="off"
									placeholder="resty@example.com"
									required />
							</div>
							<div class="grid gap-2">
								<label class="text-sm text-muted-foreground" htmlFor="password">Password</label>
								<sl-input
									id="password"
									type="password"
									autocomplete="off"
									placeholder="••••••••"
									required />
							</div>
							<sl-button type="submit" class="w-full">Login</sl-button>
						</div>
					</form>
					<div class="relative hidden bg-muted md:block">
						<img
							src="/static/img/login.webp"
							alt="Image"
							class="absolute inset-0 h-full w-full object-cover dark:brightness-50 grayscale" />
					</div>
				</div>
			</sl-card>
			<div class="text-balance text-center text-xs text-muted-foreground [&_a]:underline [&_a]:underline-offset-4 hover:[&_a]:text-primary">github.com/directlycrazy/Resty</div>
		</div>
	</div>
</div>